# AWS Configuration
# Use IAM credentials for production access
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# Alternative: For development with Bedrock API keys (30-day expiration)
# Generate from: Bedrock Console â†’ API keys
# AWS_BEDROCK_API_KEY=your_bedrock_api_key_here

# Application Configuration
PORT=8080
ENVIRONMENT=development

# Optional: Strands Agent Configuration
STRANDS_MODEL_PROVIDER=bedrock
# Using Claude Sonnet 4.5 via US inference profile (cross-region routing)
# Use inference profile ID (not ARN) for Strands SDK
STRANDS_MODEL_ID=us.anthropic.claude-sonnet-4-5-20250929-v1:0
STRANDS_TEMPERATURE=0.7
STRANDS_MAX_TOKENS=4096
